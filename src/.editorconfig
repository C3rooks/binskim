###############################
# Indentation                 #
###############################
# Tabs are 4 spaces for both C#
indent_style = space
[*.{cs,csx,vb,vbx}]
indent_size = 4

###############################
# .NET Usage                  #
###############################
# Avoid use of 'var' except where it is helpful for readability 
# (to reduce column count or line up variable declarations)
# and where no actual type inferencing is required.
csharp_style_var_elsewhere = false:silent
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = false:silent

###############################
# Namespace Imports           #
###############################
# System.* imports should appear first, in alphabetical order, followed by all others
dotnet_sort_system_directives_first = true:warning
dotnet_separate_import_directive_groups = true:warning

# Place using directives outside the namespace declaration
csharp_using_directive_placement = outside_namespace:true:warning

###############################
# Managed Naming & Casing     #
###############################
# There is no prefix required for non-public instance backing fields. All instance field access, however, should be prefixed with ‘this.’
# Todo: These rules do not know about public/non-public, so applying 'this.' on everything for now. Need feedback
dotnet_style_qualification_for_field = true:warning
dotnet_style_qualification_for_property = true:warning
dotnet_style_qualification_for_method = true:warning
dotnet_style_qualification_for_event = true:warning

# Modifier preferences
dotnet_style_require_accessibility_modifiers = for_non_interface_members:warning
dotnet_style_readonly_field = true:warning

###############################
# Spacing                     #
###############################
# Do use a single space before flow control statements 
#	Right: while (x == y) 
#	Wrong: while(x==y)  
csharp_space_after_keywords_in_control_flow_statements = true

# Do not use a space after the parenthesis and function arguments 
#	Right: CreateFoo(myChar, 0, 1) 
#	Wrong: CreateFoo( myChar, 0, 1 ) 
csharp_space_between_method_call_parameter_list_parentheses = false

# Do use a single space after a comma between function arguments. 
#	Right: Console.In.Read(myChar, 0, 1); 
#	Wrong: Console.In.Read(myChar,0,1); 
csharp_space_after_comma = true